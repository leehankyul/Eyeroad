<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/memo_info_background"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/memoInfoName"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:shadowColor="#FF464646"
            android:shadowDx="1.0"
            android:shadowDy="1.0"
            android:shadowRadius="1.0"
            android:textSize="50px"
            android:textStyle="bold"
            />
        <ImageView
            android:id="@+id/memoInfoIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/memoInfoContent"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_weight="0.96"
        android:textSize="35px"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:scrollbars="vertical" />

    <ImageView
        android:id="@+id/memoInfoImage"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
         />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:id="@+id/memoInfoDelete"
        android:background="@drawable/delete"
        />
</LinearLayout>
